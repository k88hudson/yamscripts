{
  "name": "npm-scripts-yaml",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "setup": "npm-run-all setup:*",
    "setup:clean": "rm -rf www && mkdir www",
    "setup:html": "node ./bin/generate-html.js > www/index.html",
    "setup:intl": "node ./bin/generate-locale-data > www/locale-data.js",
    "setup:static": "cp -r src/static/* www",
    "setup:fake": "touch www/main.js www/main.css",
    "setup:offline": "bin/generate-offline-files.js",
    "build": "npm-run-all build:*",
    "prebuild": "npm run setup",
    "build:js": "NODE_ENV=production webpack -p --optimize-dedupe",
    "build:css": "node-sass src/main.scss -o www",
    "start": "npm-run-all --parallel start:*",
    "prestart": "npm run setup",
    "start:js": "webpack-dev-server --hot --port=1944 --content-base www",
    "start:css": "npm run build:css && npm run build:css -- --source-map www/main.css.map -w -r",
    "test": "npm-run-all test:*",
    "test:karma": "karma start",
    "test:mocha": "mocha ./tests-node -R spec",
    "posttest": "awk 'FNR==1{print \"\"}1' ./logs/reports/coverage/text-summary.txt ./logs/reports/coverage/text.txt",
    "tdd": "karma start --no-single-run --browsers ChromeCanary",
    "travis": "karma start --reporters mocha,coverage,coveralls && npm run test:mocha",
    "codeclimate": "codeclimate-test-reporter < ./logs/reports/coverage/lcov/lcov.info",
    "yamscripts": "node ../../bin/yamscripts compile",
    "help": "node ../../bin/yamscripts help",
    "__": "# NOTE: THESE SCRIPTS ARE COMPILED!!! EDIT yamscripts.yml instead!!!"
  }
}